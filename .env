#
# Name of the project which adds namespace for all services and volumes
#
COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT_NAME:-duplex}

#
# Host volume and paths
#
HOST_VOLUME="${HOST_VOLUME:-/volume1}"
HOST_DOCKER_PATH="${HOST_DOCKER_PATH:-${HOST_VOLUME}/docker}"

#
# Timezone for containers
#
TZ="${TZ:-America/New_York}"

#
# Kometa environment variables
#
KOMETA_TAG="${KOMETA_TAG:-nightly}"
KOMETA_DEBUG="${KOMETA_DEBUG:-True}"

#
# ImageMaid environment variables
#
IMAGE_MAID_TAG="${IMAGE_MAID_TAG:-develop}"

#
# PATTRMM environment variables
#
PATTRMM_TAG="${PATTRMM_TAG:-latest}"
PATTRMM_TIME="${PATTRMM_TIME:-02:00}"
PATTRMM_PUID="${PATTRMM_PUID:-1000}"
PATTRMM_PGID="${PATTRMM_PGID:-1000}"

#
# Tautulli environment variables
#
TAUTULLI_TAG="${TAUTULLI_TAG:-latest}"
TAUTULLI_PUID="${TAUTULLI_PUID:-1029}"
TAUTULLI_PGID="${TAUTULLI_PGID:-100}"

#
# Notifiarr environment variables
#
NOTIFIARR_TAG="${NOTIFIARR_TAG:-latest}"

#
# Watchtower environment variables
#
WATCHTOWER_TAG="${WATCHTOWER_TAG:-latest}"
WATCHTOWER_POLL_INTERVAL="${WATCHTOWER_POLL_INTERVAL:-3600}"
WATCHTOWER_CLEANUP="${WATCHTOWER_CLEANUP:-true}"
